<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_google"
    android:weightSum="1"
    tools:context="com.example.duanyi.myapplication.HorizontalViewActivity">


    <Button
        android:text="Get Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/google_plus_get_post_button"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="156dp" />


    <Button
        android:text="Sign Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sign_out" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:id="@+id/long_output"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/google_plus_post_button"
        android:id="@+id/lat_output" />

    <TextView
        android:text="My location is: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendarid"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/google_plus_get_post_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/new_summary"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toStartOf="@+id/sign_out" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/new_summary"
        android:layout_centerHorizontal="true"
        android:id="@+id/new_description" />

    <Button
        android:text="Add Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_calendar_button"
        android:layout_below="@+id/new_description"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Change Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/google_plus_post_button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/long_output"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/google_post_list"
        android:layout_below="@+id/add_calendar_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBaseline="@+id/new_description"
        android:layout_alignBottom="@+id/new_description" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/calendarid"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/new_summary" />

    <TextView
        android:text="Input ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/calendarid"
        android:layout_alignBottom="@+id/calendarid" />

</RelativeLayout>